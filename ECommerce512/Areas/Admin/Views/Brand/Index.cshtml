@model IEnumerable<Brand>

@{
    var i = 1;
}

<div class="container mt-4">
    <div class="row mb-3 align-items-center">
        <div class="col-md-6">
            <h2 class="display-6">All Brands</h2>
        </div>
        <div class="col-md-6 text-md-end text-start mt-2 mt-md-0">
            <a href="/Admin/Brand/Create" class="btn btn-success">Create</a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Status</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@(i++)</th>
                            <td>@item.Name</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Description) && item.Description.Length > 50)
                                {
                                    @item.Description.Substring(0, 50)
                                }
                                else
                                {
                                    @item.Description
                                }
                            </td>
                            <td>
                                <span class="badge bg-@(item.Status ? "primary" : "danger")">
                                    @(item.Status ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td>
                                <a href="#" class="btn btn-warning btn-sm me-1">Edit</a>
                                <a href="#" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>